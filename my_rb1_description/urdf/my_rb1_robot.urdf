<?xml version="1.0" ?>

<robot name="rb1_robot_kailash">

    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="left_wheel">
        <material>Gazebo/White</material>
        <mu1>0.8</mu1>
        <mu2>0.8</mu2>
    </gazebo>
    <gazebo reference="right_wheel">
        <material>Gazebo/White</material>
        <mu1>0.8</mu1>
        <mu2>0.8</mu2>
    </gazebo>
    <gazebo reference="front_caster">
        <material>Gazebo/ZincYellow</material>
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
    </gazebo>
    <gazebo reference="back_caster">
        <material>Gazebo/ZincYellow</material>
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
    </gazebo>
    <gazebo reference="front_laser">
        <material>Gazebo/Grass</material>
    </gazebo>
    
    <link name="base_footprint"/>

    <!-- Joint between base footprint and base link -->
    <joint name="base_base_footprint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </joint>

    <!-- Base link-->
    <link name="base_link">
        <inertial>
            <mass value="24.62"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.569" ixy="0" ixz="0" iyy="0.569" iyz="0" izz="0.769" />
        </inertial>
        <collision>
            <geometry>
                <cylinder radius="0.25" length="0.30"/>
            </geometry>
        </collision>
        <visual>
            <geometry>
                <cylinder radius="0.25" length="0.30"/>
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 1" />
            </material>
        </visual>
    </link>

    <!--Joint - base link - left wheel -->
    <joint name="joint_base_left_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0.0 0.2 -0.15" />
        <child link="left_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="0.05" friction="0.1" />
    </joint>
    <!-- Link - left wheel -->
    <link name="left_wheel">
        <inertial>
            <mass value="0.05" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
        <collision>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.03" radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.03" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
    </link>
    
    <!--Joint - base link - right wheel -->
    <joint name="joint_base_right_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0.0 -0.2 -0.15" />
        <child link="right_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="0.05" friction="0.1" />
    </joint>
    <!-- Link - right wheel -->
    <link name="right_wheel">
        <inertial>
            <mass value="0.05" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
        <collision>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.03" radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.03" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
    </link>

    <!-- Joint - base - back caster wheel -->
    <joint name="joint_base_back_caster_wheel" type="fixed">
        <origin rpy="0 0 0" xyz="-0.1 0.0 -0.15" />
        <child link="back_caster" />
        <parent link="base_link" />
        <joint_properties damping="0.0" friction="0.0" />
    </joint>

    <!-- Link - back caster wheel -->
    <link name="back_caster">
        <inertial>
            <mass value="0.04" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="White">
                <color rgba="1 1 1 1" />
            </material>
        </visual>
    </link>
    
    <!-- Joint - chassis - front caster wheel -->
    <joint name="joint_base_front_caster_wheel" type="fixed">
        <origin rpy="0 0 0" xyz="0.1 0.0 -0.15" />
        <child link="front_caster" />
        <parent link="base_link" />
        <joint_properties damping="0.0" friction="0.0" />
    </joint>
    <!-- Link - front caster wheel-->
    <link name="front_caster">
        <inertial>
            <mass value="0.04" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="White">
                <color rgba="1 1 1 1" />
            </material>
        </visual>
    </link>

    <!-- Joint - base and front laser-->
    <joint name="joint_base_front_laser" type="fixed">
        <origin rpy="0 0 0" xyz="0.25 0 0.075" />
        <child link="front_laser" />
        <parent link="base_link" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - front laser -->
    <link name="front_laser">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.5" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="3.1416 0 0" /> <!--Rotate 180 deg around x-axis-->
            <geometry>
                <cylinder length="0.04" radius="0.03"/>
            </geometry>
            <material name="Green">
                <color rgba="0.1 0.7 0.2 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="3.1416 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.035"/>
            </geometry>
        </collision>
    </link>
</robot>